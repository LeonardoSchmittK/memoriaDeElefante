{
  "manifest_version": 3,
  "name": "Memória de Elefante",
  "version": "1.0",
  "description": "Extensão que ajuda no treino de memório. Nada passa batido.",
  "permissions": [
    "storage",
    "activeTab",
    "clipboardRead",
    "notifications",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "./images/logo.png"
  }
}
